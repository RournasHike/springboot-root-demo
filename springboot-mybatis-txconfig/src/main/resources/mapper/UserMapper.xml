<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mytest.mapper.UserMapper">

    <select id="selAll" resultType="com.mytest.model.User">
        select * from user
    </select>

    <select id="selUser" parameterType="int" resultType="com.mytest.model.User">
        select * from user where uid=#{uid}
    </select>

    <delete id="delete" parameterType="int">
        delete from user where uid=#{uid}
    </delete>

    <insert id="insUser" parameterType="com.mytest.model.User">
        insert into user(username,password) values(#{username},#{password})
    </insert>
</mapper>